<Window x:Class="OBLIG3.CRUD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBLIG3"
        mc:Ignorable="d"
        Title="CRUD" Height="389" Width="705">
    <Grid Margin="3,0,-2,2" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="499*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.221"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <TextBlock Name="infoText" GotFocus="infoText_GotFocus" Margin="95,38,0,64" TextWrapping="Wrap" Text="Her kan du opprette en ny student, eller slette en eksisterende" HorizontalAlignment="Left" Width="277" Grid.Column="2"/>

        <Label Content="Student ID" HorizontalAlignment="Left" Margin="2,114,0,0" VerticalAlignment="Top" Grid.Column="2" Height="26" Width="66"/>
        <TextBox Name="sid" GotFocus="sid_GotFocus" HorizontalAlignment="Left" Margin="8,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2" Height="18"/>

        <Label Content="Navn" HorizontalAlignment="Left" Margin="131,114,0,0" VerticalAlignment="Top" Grid.Column="2" Height="26" Width="38"/>
        <TextBox Name="sname" HorizontalAlignment="Left" Margin="137,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2" Height="18"/>

        <Label Content="Alder" HorizontalAlignment="Left" Margin="257,114,0,0" VerticalAlignment="Top" Grid.Column="2" Height="26" Width="38"/>
        <TextBox Name ="sage" HorizontalAlignment="Left" Margin="263,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="2" Height="18"/>

        <Button Content="Legg til" HorizontalAlignment="Left" Margin="7,55,0,0" VerticalAlignment="Top" Width="56" Click="Button_Click" Grid.Row="1" Grid.Column="2" Height="20"/>
        <Button Content="Slett" HorizontalAlignment="Left" Margin="70,55,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click_1" Grid.Row="1" Grid.Column="2" Height="20"/>

        <ComboBox Name="kursListe" HorizontalAlignment="Left" Margin="555,143,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Coursename" Grid.Column="2" Height="22" RenderTransformOrigin="0.485,0.37" SelectionChanged="kursListe_SelectionChanged"/>
        <Label Content="Kurs" HorizontalAlignment="Left" Margin="555,114,0,0" VerticalAlignment="Top" Width="118" Grid.Column="2" Height="26"/>

        <TextBox Name ="errorText" Visibility="Collapsed" HorizontalAlignment="Left" Margin="288,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="205" Grid.Row="1" Height="27" Grid.Column="2"/>
        <TextBox Name="skarakter" Grid.Column="2" HorizontalAlignment="Left" Margin="392,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="2" Content="Karakter" HorizontalAlignment="Left" Margin="393,113,0,0" VerticalAlignment="Top" Width="118"/>


    </Grid>
</Window>
