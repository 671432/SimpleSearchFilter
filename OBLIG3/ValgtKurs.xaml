<Window x:Class="OBLIG3.ValgtKurs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OBLIG3"
        mc:Ignorable="d"
        Title="ValgtKurs" Height="450" Width="800">
    <Grid>
        <ListView Name="deltagerList">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="100" Header="ID" DisplayMemberBinding="{Binding Path=Id}"/>
                        <GridViewColumn Width="200" Header="Student" DisplayMemberBinding="{Binding Path=Studentname}"/>
                        <GridViewColumn Width="100" Header="Alder" DisplayMemberBinding="{Binding Path=Studentage}"/>
                        <GridViewColumn Width="100" Header="Karakter" DisplayMemberBinding="{Binding Path=Grade}"/>
                        <GridViewColumn Width="100" Header="Kurs" DisplayMemberBinding="{Binding Path=Coursename}"/>

                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
